<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/part_finance_tag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/img_bao" />

    <TextView
        android:id="@+id/part_finance_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/part_finance_tag"
        android:gravity="center_vertical"
        android:text="月月赢"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/part_finance_name">

        <TableRow>

            <TextView
                android:id="@+id/part_finance_rate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="36dp"
                android:gravity="center"
                android:text="5.00"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/part_finance_days"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="36dp"
                android:gravity="center"
                android:text="30"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/part_finance_start_money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="36dp"
                android:gravity="center"
                android:text="100"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="20dp"
                android:gravity="center"
                android:text="年化收益率(%)"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="20dp"
                android:gravity="center"
                android:text="投资期限(天)"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="20dp"
                android:gravity="center"
                android:text="起投金额(元)"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>